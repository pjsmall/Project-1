/* Moving Cosmic Background */
@keyframes move-stars {
    from { background-position: 0 0; }
    to { background-position: -1000px 1000px; }
}

body::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://www.transparenttextures.com/patterns/stardust.png'), 
                radial-gradient(circle at center, rgba(25, 25, 112, 0.8), black);
    background-size: cover;
    animation: move-stars 60s linear infinite;
    z-index: -1;
}

/* Shooting Stars Effect */
@keyframes shooting-stars {
    0% { opacity: 1; transform: translateY(-50px) translateX(-50px) rotate(45deg); }
    100% { opacity: 0; transform: translateY(500px) translateX(500px) rotate(45deg); }
}

.shooting-star {
    position: fixed;
    width: 3px;
    height: 80px;
    background: white;
    opacity: 0;
    animation: shooting-stars 3s linear infinite;
}

/* Place multiple shooting stars at different positions */
.shooting-star:nth-child(1) { top: 10%; left: 80%; animation-delay: 1s; }
.shooting-star:nth-child(2) { top: 30%; left: 20%; animation-delay: 2s; }
.shooting-star:nth-child(3) { top: 50%; left: 60%; animation-delay: 3s; }
.shooting-star:nth-child(4) { top: 70%; left: 40%; animation-delay: 4s; }
.shooting-star:nth-child(5) { top: 90%; left: 10%; animation-delay: 5s; }

